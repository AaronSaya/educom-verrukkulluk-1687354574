{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
	<div class="navbar">
		<img src="assets/img/logo-v2.png" style="padding-top: 85px;"/>
		<div class="input-icons">
			<i class="fas fa-search"></i>
			<input class="zoekveld " type="text" placeholder="Zoeken">
		</div>
		<div class="menu-trigger">
			<div class="dropdown">
				<img src="assets/img/logo-v2.png"/>
				<span id="nav-favoriet">Mijn Favorieten</span>
				<span id="nav-boodschappen">Mijn Boodschappen</span>
			</div>
		</div>
	</div>
{% endblock %}


{# nu de block content op in de main pagina vullen #}
{% block content %}


{# Loop #}
<ul class="menu">
	{% for gerecht in data %}

		<li
			class="col-md-6">

			{#image#}
			<img
			class="afbeelding-menu" src="{{gerecht.gerechten.afbeelding}}">

			{#TITEL#}
			<h4>{{ gerecht.gerechten.titel }}<h4>

					{#OMSCHRIJVING#}
					<span class="omschrijving">{{gerecht.gerechten.korte_omschrijving}}</span><br>

					{#WAARDERING#}
					<span>Waardering
						{{gerecht.berekenWaardering}}</span><br>

					{#PRIJS#}
					<span>Prijs
						{{gerecht.totaalprijs}}</span><br>

					{#CALORIËN#}
					<span>Caloriën
						{{gerecht.totaalcalories}}</span>
					<ul>
						{% for ingr in gerecht.ingredienten %}
							<li>
								<spanDit {% if ingr.id < 2 %}style='color: #F00'{% endif %}>{{ ingr.naam }} </span> {# if #} {% if ingr.id == 3 %} <strong> is id 3!</strong> {% endif %} </li> {% endfor %} </ul> </li> {% endfor %} </ul> {# Dump #} <pre> {{ dump(data) }} </pre> {% endblock %}
